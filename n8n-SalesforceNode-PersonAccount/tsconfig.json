{
	"compilerOptions": {
	  "target": "ES6",  // Choose appropriate target
	  "module": "commonjs",  // Set module system to commonjs
	  "strict": true,  // Enable strict mode
	  "esModuleInterop": true,  // To use `import` statements
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "outDir": "./dist/nodes/SalesforcePersonAccount",  // Output compiled files to dist/nodes/SalesforcePersonAccount
	  "rootDir": "./nodes/SalesforcePersonAccount",  // Set the root directory to your node files
	  "moduleResolution": "node"
	},
	"include": [
	  "nodes/SalesforcePersonAccount/**/*"  // Include all files in nodes/SalesforcePersonAccount
	],
	"exclude": [
	  "node_modules"  // Exclude node_modules
	]
  }
  